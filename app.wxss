/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.outest{
  padding-top: 60rpx;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  font-family:Arial, Helvetica, sans-serif;
  font-size: 35rpx;
}
.ininfo{
  background-color: rgb(255, 255, 255);
  height:100%;
  width: 90%;
  display: flex;
  flex-direction: column;
  box-sizing:border-box;
  padding-left: 40rpx;
  padding-right: 60rpx;
  padding-top: 50rpx;
  padding-bottom: 70rpx;
  border-radius: 30rpx;
  box-shadow: 5rpx 5rpx 20rpx 1rpx rgb(210, 210, 210);
}

.outer{
  display:flex;
  margin: 20rpx;
  border-bottom: 3rpx solid rgb(220, 220, 220);
  width: 95%;
}

.left{
  color: rgb(50, 50, 50);
  height: 70rpx;
  width: 200rpx;
  line-height: 70rpx;
  text-align: right;
}

.wrap{
  width: 100%;
  line-height: 70rpx; 
  text-align: right;
}

.label{
  height: 70rpx;
  color: rgb(100, 100, 100);
  margin-right: 30rpx;
}
.btn-area{
  padding-top: 70rpx;
  padding-bottom: 50rpx;
  margin: 30rpx;
}
.btn{
  color: rgb(255, 186, 130);
  border: 5rpx solid rgb(255, 186, 130);
  border-radius: 30rpx;
  box-shadow: 1rpx 1rpx 20rpx 1rpx rgb(210, 210, 210);
}
